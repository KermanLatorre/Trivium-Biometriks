<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HistorialSesionesActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HistÃ³rico de Sesiones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvNombrePaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"
        android:text="Paciente: Nombre del Paciente"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvInfoHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombrePaciente"
        android:text="Sesiones registradas: 0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/listViewSesiones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvInfoHistorial"
        android:layout_above="@id/btnVolver"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Volver" />

</RelativeLayout>